{
  "name": "Notice Response Generator",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "generate-notice-response",
        "responseMode": "responseNode"
      },
      "id": "webhook-trigger",
      "name": "Notice Upload Webhook",
      "type": "n8n-nodes-base.webhook",
      "position": [240, 300]
    },
    {
      "parameters": {
        "url": "http://localhost:11434/api/generate",
        "options": {
          "timeout": 60000
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "model",
              "value": "qwen2.5:1.5b"
            },
            {
              "name": "prompt",
              "value": "={{`You are a senior legal advisor specializing in GST law in India. Draft a professional legal response to this GST notice: ${$json.body.noticeContent} Additional Context: ${$json.body.additionalContext} Create a comprehensive legal response with proper format, objections, point-by-point responses, CGST Act references, and prayer for relief.`}}"
            },
            {
              "name": "stream",
              "value": false
            }
          ]
        }
      },
      "id": "ollama-legal-request",
      "name": "Generate Legal Response",
      "type": "n8n-nodes-base.httpRequest",
      "position": [460, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { draftResponse: $json.response, source: 'Legal AI + Qwen2.5', timestamp: $now, disclaimer: 'AI-generated draft. Please review with qualified legal counsel before submission.' } }}"
      },
      "id": "respond-to-webhook",
      "name": "Return Legal Draft",
      "type": "n8n-nodes-base.respondToWebhook",
      "position": [680, 300]
    }
  ],
  "connections": {
    "Notice Upload Webhook": {
      "main": [
        [
          {
            "node": "Generate Legal Response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Generate Legal Response": {
      "main": [
        [
          {
            "node": "Return Legal Draft",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
